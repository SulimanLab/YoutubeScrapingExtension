{
  "name": "asdf",
  "description": "asdf!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "type": "module",
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "alarms",
    "downloads",
    "history",
    "scripting",
    "webNavigation",
    "cookies",
    "identity",
    "identity.email",
    "declarativeNetRequestWithHostAccess"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "host_permissions": [
    "http://100.88.185.98:5500/",
    "http://100.88.185.98:3000/",
    "http://localhost:5500/*",
    "https://www.youtube.com/*",
    "https://www.youtube.com/watch?v=*",
    "*://www.youtube.com/*",
    "*://*.ytimg.com/vi/*/*"
  ]
}
